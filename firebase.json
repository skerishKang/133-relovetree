{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "**/*.exe",
            "**/*.dll",
            "**/*.bat",
            "**/*.cmd",
            "**/*.sh"
        ],
        "rewrites": [
            {
                "source": "/ai-helper",
                "function": "aiHelper"
            },
            {
                "source": "/api/admin/trees/**",
                "function": "treeAdmin"
            }
        ]
    },
    "functions": {
        "source": "functions"
    },
    "firestore": {
        "rules": "firestore.rules"
    },
    "storage": {
        "rules": "storage.rules"
    }
}