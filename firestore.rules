rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 공통 헬퍼: 로그인 여부
    function isSignedIn() {
      return request.auth != null;
    }

    // 공통 헬퍼: 관리자 판별
    // 1) 특정 관리자 이메일
    // 2) users/{uid}.role == 'admin'
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'padiemipu@gmail.com' ||
        request.auth.token.email == 'limone@example.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // User profiles
    match /users/{userId} {
      // 누구나 로그인만 되어 있으면 자신의 프로필 생성 가능
      allow create: if isSignedIn();

      // 기본: 본인만 자신의 문서 읽기/수정/삭제 가능
      allow read, update, delete: if isSignedIn() && request.auth.uid == userId;

      // 관리자: 모든 유저 문서 읽기/쓰기 가능 (대시보드/사용자 관리, 데모 유저 생성용)
      allow read, write: if isAdmin();
    }

    // AI 활동 로그: 관리자만 접근
    match /ai_logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Trees: Public read
    match /trees/{treeId} {
      allow read: if true;
      allow create: if isSignedIn();
      
      // Allow update if:
      // 1. User is the owner (can change everything)
      // 2. OR User is authenticated AND only changing 'likes' (for liking/unliking)
      allow update: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
      );
      
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // Comments Subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        // Only owner of the comment can delete/update it
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    // Community posts: 공개 읽기, 로그인 사용자만 쓰기
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();

      // 댓글 서브컬렉션
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
      }
    }
  }
}
